<Layout title="Informacion | Fechas importantes para Emily">
  <div class="hero">
    <div class="hero-content">
      <i class="fa-solid fa-star"></i>
      <h1>Fechas</h1>
      <p>Fechas importantes para Emily</p>
      <div class="hero-links">
        <a href="/">
          <button>
            Inicio
          </button>
        </a>
        <a href="/galeria">
          <button>
            Galeria
          </button>
        </a>
        <a href="/musicas">
          <button>
            Musicas
          </button>
        </a>
        <a href="/video">
          <button>
            Videos
          </button>
        </a>
        <a href="/juegos">
          <button>
            Juegos
          </button>
        </a>
      </div>
    </div>
  </div>
  <main>
    <section class="timer-container">
      <div class="timer1">
        <div class="timer1-head">
          <h2>Amistad</h2>
          <p>Nuestro tiempo como amigos</p>
        </div>
